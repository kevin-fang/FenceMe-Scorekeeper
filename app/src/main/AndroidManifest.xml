            </intent-filter>
        </activity>

        <activity
            android:name="com.kfang.fencemelibrary.main.AboutActivity"
            android:theme="@style/AppThemeActionBar">
        </activity>
        <activity
            android:name="com.kfang.fencemelibrary.main.CardPlayerActivity"
